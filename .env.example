# ========================================
# Vision-AI Environment Configuration
# ========================================
# Copy to .env and modify as needed

# ---- Application ----
APP_NAME=Vision-AI Engine
DEBUG=true
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# ---- Database ----
DATABASE_URL=sqlite+aiosqlite:///./data/vision_ai.db
# DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/vision_ai

# ---- Redis ----
REDIS_URL=redis://localhost:6379/0

# ---- MQTT ----
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=vision-ai

# ---- AI Models ----
DEFAULT_MODEL=yolov8n.pt
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45
MAX_DETECTIONS=100

# ---- Storage ----
UPLOAD_DIR=./data/uploads
MODEL_DIR=./data/models
DATASET_DIR=./data/datasets
MAX_UPLOAD_SIZE=52428800

# ---- Training ----
TRAINING_EPOCHS=50
TRAINING_BATCH_SIZE=16
TRAINING_IMG_SIZE=640
TRAINING_WORKERS=4

# ---- Security ----
JWT_SECRET=change-this-to-a-secure-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
DEFAULT_ADMIN_PASSWORD=admin123

# ---- Alerts ----
ALERT_WEBHOOK_URL=
ALERT_EMAIL_FROM=
ALERT_EMAIL_SMTP_HOST=
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_SMTP_USER=
ALERT_EMAIL_SMTP_PASS=
ALERT_SLACK_WEBHOOK=

# ---- CORS ----
CORS_ORIGINS=["http://localhost:3000","http://localhost:80","http://localhost:5173"]

# ---- ESP32 Devices ----
ESP32_SERVER_IP=192.168.1.100
ESP32_CAM_IP=192.168.1.101
